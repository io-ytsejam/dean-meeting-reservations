<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>

    <session-factory>
        <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="connection.url">${DB_URL}</property>
        <property name="dialect">org.hibernate.dialect.MySQL8Dialect</property>
        <property name="hibernate.hbm2ddl.auto">update</property>

        <mapping class="com.iww.deanmeetingreservations.Models.Dean"/>
        <mapping class="com.iww.deanmeetingreservations.Models.Dean_department"/>
        <mapping class="com.iww.deanmeetingreservations.Models.Department"/>

    </session-factory>
</hibernate-configuration>